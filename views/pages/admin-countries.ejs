<%- include('../partials/navbar') %>

<section class="max-w-4xl mx-auto p-6 dark:bg-gray-900 bg-white rounded-xl shadow-xl mt-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold dark:text-white">Manage Countries</h1>
    <a href="/admin/countries/new" class="btn btn-primary">Add Country</a>
  </div>

  <table class="w-full table-auto text-left bg-white dark:bg-gray-800 border-collapse">
    <thead class="bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-white">
      <tr>
        <th class="p-3">Name</th>
        <th class="p-3">Code</th>
        <th class="p-3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% countries.forEach(country => { %>
        <tr class="border-b dark:border-gray-600">
          <td class="p-3"><%= country.name %></td>
          <td class="p-3"><%= country.code %></td>
          <td class="p-3">
            <a href="/admin/countries/<%= country._id %>/edit" class="text-blue-500 hover:underline">Edit</a> |
            <form action="/admin/countries/<%= country._id %>?_method=DELETE" method="POST" class="inline">
              <button class="text-red-500 hover:underline">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>