<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<%- include('../partials/sidebar') %>

<% if (leaderboard.length === 0) { %>
    <p class="text-center text-gray-500 dark:text-gray-400">No scores yet. Be the first!</p>
  <% } else { %>
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% leaderboard.forEach((player, index) => { %>
        <li class="flex items-center justify-between py-3 px-2 group hover:bg-gray-100 dark:hover:bg-gray-800 transition rounded-xl">
          <div class="flex items-center space-x-3">
            <div class="text-lg font-semibold text-gray-700 dark:text-gray-200 w-6">
              <%= index + 1 %>
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-300">
              <%= player.username %>
            </div>
          </div>
          <div class="text-right text-sm font-semibold text-indigo-700 dark:text-indigo-700">
            <%= player.score %> pts
          </div>
        </li>
      <% }); %>
    </ul>
  <% } %>
<%- include('../partials/footer') %>