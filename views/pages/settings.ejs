<%- include('../partials/navbar') %>

<section class="max-w-2xl mx-auto mt-10 p-6 bg-white dark:bg-gray-900 rounded-lg shadow">
  <h1 class="text-3xl font-bold mb-6 text-gray-800 dark:text-white">User Settings</h1>

  <form action="/settings" method="POST" class="space-y-6">
    <!-- Username -->
    <div>
      <label class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Username</label>
      <input
        type="text"
        name="username"
        value="<%= user.username %>"
        class="form-input w-full bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white rounded-lg border border-gray-300 dark:border-gray-700"
        required
      />
    </div>

    <!-- Email -->
    <div>
      <label class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
      <input
        type="email"
        name="email"
        value="<%= user.email %>"
        class="form-input w-full bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white rounded-lg border border-gray-300 dark:border-gray-700"
        required
      />
    </div>

    <!-- Avatar -->
    <div class="flex items-center mt-6">
      <img src="<%= user.avatarUrl %>" alt="avatar" class="w-14 h-14 rounded-full border-2 border-indigo-500 mr-4" />
      <p class="text-gray-600 dark:text-gray-400 text-sm">
        Your avatar is powered by <a href="https://gravatar.com" target="_blank" class="text-indigo-600 dark:text-indigo-400 hover:underline">Gravatar</a>.
        Update your avatar by changing your email on <strong>Gravatar</strong>.
      </p>
    </div>

    <!-- Submit -->
    <button
      type="submit"
      class="btn btn-primary w-full mt-6"
    >
      Save Changes
    </button>
  </form>
</section>

<%- include('../partials/footer') %>