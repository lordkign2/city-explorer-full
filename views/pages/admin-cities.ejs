<!-- ./views/pages/admin-cities.ejs -->
<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flashMessages') %>
<%- include('../partials/adminSidebar') %>

<section class="max-w-6xl mx-auto p-6 dark:bg-gray-900 bg-white rounded-xl shadow-xl mt-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold dark:text-white">Manage Cities</h1>
    <a href="/admin/cities/new" class="btn btn-primary">Add City</a>
  </div>

  <table class="w-full table-auto text-left bg-white dark:bg-gray-800 border-collapse">
    <thead class="bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-white">
      <tr>
        <th class="p-3">Name</th>
        <th class="p-3">Country</th>
        <th class="p-3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% cities.forEach(city => { %>
        <tr class="border-b dark:border-gray-600">
          <td class="p-3"><%= city.name %></td>
          <td class="p-3"><%= city.country?.name || 'Unknown' %></td>
          <td class="p-3">
            <a href="/admin/cities/<%= city._id %>/edit" class="text-blue-500 hover:underline">Edit</a> |
            <form action="/admin/cities/<%= city._id %>?_method=DELETE" method="POST" class="inline">
              <button class="text-red-500 hover:underline">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>