<%- include('../partials/adminSidebar') %>

<section class="max-w-5xl mx-auto p-6 dark:bg-gray-900 bg-white rounded-xl shadow-xl mt-6">
  <h1 class="text-3xl font-bold mb-4 text-gray-800 dark:text-white">Admin Dashboard</h1>
  <div class="grid grid-cols-2 gap-6 text-center">
    <div class="p-6 bg-blue-100 dark:bg-blue-900 rounded-lg shadow">
      <h2 class="text-xl font-semibold text-gray-800 dark:text-white">Total Cities</h2>
      <p class="text-4xl font-bold text-blue-700 dark:text-blue-300"><%= cityCount %></p>
    </div>
    <div class="p-6 bg-green-100 dark:bg-green-900 rounded-lg shadow">
      <h2 class="text-xl font-semibold text-gray-800 dark:text-white">Total Countries</h2>
      <p class="text-4xl font-bold text-green-700 dark:text-green-300"><%= countryCount %></p>
    </div>
  </div>
</section>

