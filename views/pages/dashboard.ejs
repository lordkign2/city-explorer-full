<%- include('../partials/navbar') %>

<section class="max-w-4xl mx-auto p-6 mt-6 bg-white dark:bg-gray-900 rounded-lg shadow">
  <h1 class="text-3xl font-bold mb-6 text-gray-800 dark:text-white">
    Welcome, <%= user.username %>!
  </h1>

  <!-- User Avatar and Email -->
  <div class="flex items-center space-x-4 mb-6">
    <img src="<%= user.avatarUrl %>" alt="avatar" class="w-16 h-16 rounded-full border-2 border-indigo-500" />
    <div>
      <p class="text-lg text-gray-700 dark:text-gray-300"><strong>Email:</strong> <%= user.email %></p>
      <a href="/settings" class="text-sm text-indigo-600 dark:text-indigo-400 hover:underline">Update Profile</a>
    </div>
  </div>

  <!-- Favorite Cities -->
  <div class="mb-8">
    <h2 class="text-2xl font-semibold mb-3 text-gray-800 dark:text-white">Favorite Cities</h2>
    <% if (user.favorites.length === 0) { %>
      <p class="text-gray-600 dark:text-gray-400">You haven't added any favorite cities yet.</p>
    <% } else { %>
      <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <% user.favorites.forEach(city => { %>
          <li class="bg-gray-100 dark:bg-gray-800 p-4 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold"><%= city.name %>, <%= city.country %></h3>
            <a href="/cities/<%= city._id %>" class="text-indigo-600 dark:text-indigo-400 hover:underline text-sm">View City</a>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <!-- Trivia History (Optional Feature) -->
  <% if (user.triviaScores && user.triviaScores.length > 0) { %>
    <div>
      <h2 class="text-2xl font-semibold mb-3 text-gray-800 dark:text-white">Trivia History</h2>
      <ul class="space-y-2">
        <% user.triviaScores.forEach(score => { %>
          <li class="bg-yellow-100 dark:bg-yellow-900 p-3 rounded-md shadow">
            <p class="text-gray-800 dark:text-yellow-200">
              <strong><%= score.cityName %></strong> â€” <%= score.correct %> correct out of <%= score.total %> questions
            </p>
          </li>
        <% }) %>
      </ul>
    </div>
  <% } %>
</section>

<%- include('../partials/footer') %>