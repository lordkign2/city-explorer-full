<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flashMessages') %>
<%- include('../partials/sidebar') %>

<section class="max-w-5xl mx-auto mt-10 px-6 sm:px-8 py-8 bg-white dark:bg-gray-900 rounded-2xl shadow-lg">
  <h1 class="text-3xl font-extrabold mb-8 text-gray-800 dark:text-white" data-aos="fade-down">
    Welcome, <%= user.username %>!
  </h1>

  <!-- User Profile -->
  <div class="flex items-center space-x-6 mb-10" data-aos="fade-up">
    <img src="<%= user.avatarUrl %>" alt="User avatar" class="w-20 h-20 rounded-full border-4 border-indigo-500 shadow" />
    <div>
      <p class="text-lg text-gray-700 dark:text-gray-300"><strong>Email:</strong> <%= user.email %></p>
      <a href="/dashboard/settings" class="text-sm text-indigo-600 dark:text-indigo-400 hover:underline mt-1 inline-block">Update Profile</a>
    </div>
  </div>

  <!-- Favorite Cities -->
  <div class="mb-10" data-aos="fade-up">
    <h2 class="text-2xl font-bold mb-4 text-gray-800 dark:text-white">Favorite Cities</h2>
    <% if (cities.length === 0) { %>
      <p class="text-gray-600 dark:text-gray-400 italic">You haven't added any favorite cities yet.</p>
    <% } else { %>
      <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% cities.forEach(city => { %>
          <li class="bg-gray-100 dark:bg-gray-800 p-5 rounded-xl shadow hover:shadow-lg transition-transform hover:-translate-y-1">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-1">
              <%= city.favoriteCity %>, <%= city.cityCountry %>
            </h3>
            <a href="/cities/<%= city.cityId %>" class="text-indigo-600 dark:text-indigo-400 text-sm hover:underline">View City</a>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <!-- Trivia History -->
  <% if (user.triviaScores && user.triviaScores.length > 0) { %>
    <div data-aos="fade-up">
      <h2 class="text-2xl font-bold mb-4 text-gray-800 dark:text-white">Trivia History</h2>
      <ul class="space-y-4">
        <% user.triviaScores.forEach(score => { %>
          <li class="bg-yellow-100 dark:bg-yellow-900 p-4 rounded-lg shadow-md">
            <p class="text-gray-800 dark:text-yellow-200">
              <strong><%= score.cityName %></strong> â€” <%= score.correct %> correct out of <%= score.total %> questions
            </p>
          </li>
        <% }) %>
      </ul>
    </div>
  <% } %>
</section>

<%- include('../partials/footer') %>

<!-- AOS Init -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js" defer></script>
<script>AOS.init();</script>
