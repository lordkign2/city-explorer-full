<% if (success && success.length) { %>
    <div class="bg-green-100 dark:bg-green-800 text-green-800 dark:text-green-100 px-4 py-2 mb-4 rounded-md">
      <%= success %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="bg-red-100 dark:bg-red-800 text-red-800 dark:text-red-100 px-4 py-2 mb-4 rounded-md">
      <%= error %>
    </div>
  <% } %>