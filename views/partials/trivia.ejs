<!-- .views/partial/trivia.ejs/ -->
<section class="mt-10">
    <h2 class="text-2xl font-bold mb-4 text-gray-800 dark:text-white">Trivia Quiz</h2>
  
    <% if (trivia && trivia.length > 0) { %>
      <form id="trivia-form" class="space-y-6" action="/cities/<%= city._id %>/trivia" method="POST">
        <% trivia.forEach((q, index) => { %>
          <div class="bg-gray-100 dark:bg-gray-800 p-4 rounded shadow">
            <p class="mb-2 text-gray-800 dark:text-gray-200"><strong>Q<%= index + 1 %>:</strong> <%= q.question %></p>
            <% q.options.forEach(opt => { %>
              <label class="block mb-1 text-gray-700 dark:text-gray-300">
                <input type="radio" name="answers[<%= index %>]" value="<%= opt %>" required class="mr-2" />
                <%= opt %>
              </label>
            <% }) %>
            <input type="hidden" name="questions[<%= index %>]" value="<%= q.question %>">
            <input type="hidden" name="correctAnswers[<%= index %>]" value="<%= q.answer %>">
          </div>
        <% }) %>
  
        <button type="submit" class="btn btn-primary w-full">Submit Answers</button>
      </form>
    <% } else { %>
      <p class="text-gray-600 dark:text-gray-400">No trivia questions available for this city yet.</p>
    <% } %>
  </section>